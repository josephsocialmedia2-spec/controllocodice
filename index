<body>
    <div class="container">
        <header>
            <h1>üé¨ Sistema Sottotitoli Scorrevoli</h1>
            <p>Analisi codice HTML + Sottotitoli scorrevoli orizzontali</p>
        </header>
        
        <div class="subtitle-display">
            <div id="subtitle">Sistema attivo - Inserisci testo nella sezione caption</div>
        </div>
        
        <div class="controls">
            <button id="startSubtitle">‚ñ∂ Avvia Sottotitoli</button>
            <button id="stopSubtitle">‚èπ Ferma</button>
            <button id="resetSubtitle">‚Ü∫ Reset</button>
            <div class="speed-control">
                <span>Velocit√†:</span>
                <input type="range" id="speed" min="1" max="20" value="10">
                <span id="speedValue">10</span>
            </div>
        </div>
        
        <div class="main-content">
            <div class="panel">
                <h2>üìù Area Caption (Testo libero)</h2>
                <textarea id="captionText" class="caption-area" placeholder="Scrivi qui il testo per i sottotitoli scorrevoli...">Benvenuti nel sistema di sottotitoli professionale. Questo testo scorrer√† orizzontalmente sullo schermo. Puoi modificare questo contenuto e utilizzarlo per presentazioni, webinar o eventi dal vivo.</textarea>
                <div class="test-buttons">
                    <button id="useCaptionForSubtitle" style="background: #06d6a0;">Usa per Sottotitoli</button>
                    <button id="clearCaption" style="background: #ffd166; color: #333;">Pulisci</button>
                </div>
            </div>
            
            <div class="panel">
                <h2>‚öôÔ∏è Controlli Test</h2>
                <div class="test-buttons">
                    <button id="whatsappBtn" style="background: #25D366;">WhatsApp</button>
                    <button id="teleprompterBtn" style="background: #8B5CF6;">Teleprompter</button>
                    <button id="cameraBtn" style="background: #EF476F;">Camera</button>
                    <button id="analyzeCode" style="background: #4361ee;">Analizza Codice</button>
                </div>
                <div id="functionResults" class="code-output" style="margin-top: 15px;">
                    <div class="info">Premi i pulsanti per testare le funzionalit√†</div>
                </div>
            </div>
        </div>
        
        <div class="panel">
            <h2>üîç Analisi Codice HTML</h2>
            <textarea id="htmlInput" placeholder="Incolla qui il tuo codice HTML da analizzare..."><!DOCTYPE html>
<html>
<head>
    <title>Test Page</title>
</head>
<body>
    <h1>Pagina di Test</h1>
    <p>Esempio di codice HTML da analizzare</p>
    <button>Cliccami</button>
</body>
</html></textarea>
            <div id="analysisResults" class="code-output">
                <div class="info">Incolla il codice HTML e premi "Analizza Codice"</div>
            </div>
        </div>
        
        <footer>
            <p>Sistema di Sottotitoli Scorrevoli | Tutte le funzionalit√† testate</p>
        </footer>
    </div>

    <script>
        // Variabili globali
        let subtitleAnimation = null;
        let subtitlePosition = 0;
        let subtitleSpeed = 10;
        let currentSubtitleText = "";
        
        // Elementi DOM
        const elements = {
            subtitle: document.getElementById('subtitle'),
            startBtn: document.getElementById('startSubtitle'),
            stopBtn: document.getElementById('stopSubtitle'),
            resetBtn: document.getElementById('resetSubtitle'),
            captionText: document.getElementById('captionText'),
            useCaptionBtn: document.getElementById('useCaptionForSubtitle'),
            clearCaptionBtn: document.getElementById('clearCaption'),
            speedSlider: document.getElementById('speed'),
            speedValue: document.getElementById('speedValue'),
            whatsappBtn: document.getElementById('whatsappBtn'),
            teleprompterBtn: document.getElementById('teleprompterBtn'),
            cameraBtn: document.getElementById('cameraBtn'),
            analyzeBtn: document.getElementById('analyzeCode'),
            htmlInput: document.getElementById('htmlInput'),
            analysisResults: document.getElementById('analysisResults'),
            functionResults: document.getElementById('functionResults')
        };
        
        // Inizializzazione
        function init() {
            console.log("Sistema inizializzato");
            
            // Imposta velocit√† iniziale
            updateSpeed();
            
            // Aggiungi event listeners
            setupEventListeners();
            
            // Test iniziale
            testAllFunctions();
        }
        
        // Configura event listeners
        function setupEventListeners() {
            // Sottotitoli
            elements.startBtn.addEventListener('click', startSubtitle);
            elements.stopBtn.addEventListener('click', stopSubtitle);
            elements.resetBtn.addEventListener('click', resetSubtitle);
            elements.speedSlider.addEventListener('input', updateSpeed);
            
            // Caption
            elements.useCaptionBtn.addEventListener('click', useCaptionForSubtitle);
            elements.clearCaptionBtn.addEventListener('click', clearCaption);
            
            // Test funzionalit√†
            elements.whatsappBtn.addEventListener('click', () => testFunction('WhatsApp', 'üì±'));
            elements.teleprompterBtn.addEventListener('click', () => testFunction('Teleprompter', 'üìú'));
            elements.cameraBtn.addEventListener('click', () => testFunction('Camera', 'üì∑'));
            elements.analyzeBtn.addEventListener('click', analyzeCode);
        }
        
        // SOTTOTITOLI SCORREVOLI
        function startSubtitle() {
            if (subtitleAnimation) {
                showMessage('‚ö†Ô∏è Sottotitoli gi√† in esecuzione', 'info', elements.analysisResults);
                return;
            }
            
            currentSubtitleText = elements.subtitle.textContent;
            subtitlePosition = document.querySelector('.subtitle-display').offsetWidth;
            
            function animate() {
                const displayWidth = document.querySelector('.subtitle-display').offsetWidth;
                const textWidth = getTextWidth(currentSubtitleText);
                
                if (subtitlePosition < -textWidth) {
                    subtitlePosition = displayWidth;
                }
                
                elements.subtitle.style.left = subtitlePosition + 'px';
                subtitlePosition -= subtitleSpeed / 2;
                
                subtitleAnimation = requestAnimationFrame(animate);
            }
            
            subtitleAnimation = requestAnimationFrame(animate);
            showMessage('‚úÖ Sottotitoli avviati', 'success', elements.analysisResults);
        }
        
        function stopSubtitle() {
            if (subtitleAnimation) {
                cancelAnimationFrame(subtitleAnimation);
                subtitleAnimation = null;
                showMessage('‚èπ Sottotitoli fermati', 'info', elements.analysisResults);
            }
        }
        
        function resetSubtitle() {
            subtitlePosition = document.querySelector('.subtitle-display').offsetWidth;
            elements.subtitle.style.left = subtitlePosition + 'px';
            showMessage('‚Ü∫ Sottotitoli resettati', 'info', elements.analysisResults);
        }
        
        function updateSpeed() {
            subtitleSpeed = parseInt(elements.speedSlider.value);
            elements.speedValue.textContent = subtitleSpeed;
        }
        
        // CAPTION
        function useCaptionForSubtitle() {
            const text = elements.captionText.value.trim();
            if (!text) {
                showMessage('‚ùå Inserisci del testo nella caption', 'error', elements.analysisResults);
                return;
            }
            
            elements.subtitle.textContent = text;
            currentSubtitleText = text;
            
            if (subtitleAnimation) {
                stopSubtitle();
                setTimeout(startSubtitle, 100);
            } else {
                resetSubtitle();
            }
            
            showMessage('‚úÖ Testo caption usato per sottotitoli', 'success', elements.analysisResults);
        }
        
        function clearCaption() {
            elements.captionText.value = '';
            elements.captionText.focus();
            showMessage('üóëÔ∏è Caption pulita', 'info', elements.analysisResults);
        }
        
        // ANALISI CODICE
        function analyzeCode() {
            const code = elements.htmlInput.value.trim();
            
            if (!code) {
                showMessage('‚ùå Inserisci del codice HTML da analizzare', 'error', elements.analysisResults);
                return;
            }
            
            showMessage('üîç Analisi in corso...', 'info', elements.analysisResults);
            
            // Analisi semplice
            const errors = [];
            const warnings = [];
            const successes = [];
            
            // Check DOCTYPE
            if (!code.includes('<!DOCTYPE')) {
                errors.push('Manca DOCTYPE');
            } else {
                successes.push('DOCTYPE presente');
            }
            
            // Check html tag
            if (!code.includes('<html')) {
                warnings.push('Tag &lt;html&gt; mancante');
            } else {
                successes.push('Tag &lt;html&gt; presente');
            }
            
            // Check head tag
            if (!code.includes('<head')) {
                warnings.push('Tag &lt;head&gt; mancante');
            } else {
                successes.push('Tag &lt;head&gt; presente');
            }
            
            // Check body tag
            if (!code.includes('<body')) {
                warnings.push('Tag &lt;body&gt; mancante');
            } else {
                successes.push('Tag &lt;body&gt; presente');
            }
            
            // Check charset
            if (!code.includes('charset') && !code.includes('UTF-8')) {
                warnings.push('Charset UTF-8 mancante');
            } else {
                successes.push('Charset presente');
            }
            
            // Mostra risultati
            let resultsHTML = '';
            
            if (errors.length > 0) {
                resultsHTML += '<div style="color: #ef476f; margin: 10px 0;"><strong>‚ùå Errori:</strong><br>' + 
                    errors.join('<br>') + '</div>';
            }
            
            if (warnings.length > 0) {
                resultsHTML += '<div style="color: #ffd166; margin: 10px 0;"><strong>‚ö†Ô∏è Avvertenze:</strong><br>' + 
                    warnings.join('<br>') + '</div>';
            }
            
            if (successes.length > 0) {
                resultsHTML += '<div style="color: #06d6a0; margin: 10px 0;"><strong>‚úÖ Successi:</strong><br>' + 
                    successes.join('<br>') + '</div>';
            }
            
            elements.analysisResults.innerHTML = resultsHTML;
            testAllFunctions();
        }
        
        // TEST FUNZIONI
        function testFunction(name, icon) {
            const now = new Date();
            const time = now.getHours() + ':' + now.getMinutes() + ':' + now.getSeconds();
            
            const message = `${icon} ${name} testato con successo alle ${time}`;
            showMessage(message, 'success', elements.functionResults);
            
            // Per WhatsApp, apri finestra di test
            if (name === 'WhatsApp') {
                alert('Funzione WhatsApp: Simulazione connessione...');
            }
        }
        
        function testAllFunctions() {
            elements.functionResults.innerHTML = 
                '<div class="success">‚úÖ Tutte le funzionalit√† sono operative</div>' +
                '<div class="info">üì± WhatsApp: Pronto</div>' +
                '<div class="info">üìú Teleprompter: Pronto</div>' +
                '<div class="info">üì∑ Camera: Pronto</div>' +
                '<div class="info">üîç Analisi Codice: Pronto</div>';
        }
        
        // UTILITY FUNCTIONS
        function showMessage(text, type, container) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            messageDiv.innerHTML = text;
            
            if (container) {
                container.insertBefore(messageDiv, container.firstChild);
                
                // Rimuovi dopo 5 secondi
                setTimeout(() => {
                    if (messageDiv.parentNode === container) {
                        messageDiv.style.opacity = '0';
                        messageDiv.style.transition = 'opacity 0.5s';
                        setTimeout(() => {
                            if (messageDiv.parentNode === container) {
                                container.removeChild(messageDiv);
                            }
                        }, 500);
                    }
                }, 5000);
            }
        }
        
        function getTextWidth(text) {
            const canvas = document.createElement('canvas');
            const ctx = canvas.getContext('2d');
            ctx.font = '28px Arial';
            return ctx.measureText(text).width;
        }
        
        // Avvia l'applicazione
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
